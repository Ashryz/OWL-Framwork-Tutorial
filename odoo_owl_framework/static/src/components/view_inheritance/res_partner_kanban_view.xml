<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-name="odoo_owl_framework.ResPartnerKanbanView" t-inherit="web.KanbanView" owl="1">
        <xpath expr="//t[contains(@ t-component, 'props.Renderer')]" position="before">
            <div class="p-3 bg-white o_res_partner_kanban_view_sidebar">
                <h3>Customer Locations</h3>
                <div class="list-group">

                    <t t-foreach="customerLocations" t-as="c" t-key="c.state_id[0]">
                        <a class="list-group-item" style="cursor: pointer;" t-on-click="()=>this.selectLocation(c.state_id)"><span t-esc="c.state_id[1]"/> <span t-esc="c.state_id_count" class="badge bg-primary text-white"/> </a>
                    </t>
                </div>
            </div>
        </xpath>

        <xpath expr="//Layout" position="attributes">
            <attribute name="className">model.useSampleModel ? 'o_view_sample_data' : '' + "d-flex"</attribute>
        </xpath>
    </t>
</templates>